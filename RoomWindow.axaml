<Window xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		x:Class="CardGameClient.RoomWindow"
		Title="Room"
		FontFamily="Noto Sans">
	<StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
		<Button Click="BackClick">
			Back
		</Button>
		<TextBlock>
			Select your Deck:
		</TextBlock>
		<ComboBox Name="DeckSelectBox" ItemsSource="{Binding Decknames}" SelectionChanged="DeckSelectionChanged">
			<ComboBox.ItemTemplate>
				<DataTemplate>
					<TextBlock Text="{Binding}"/>
				</DataTemplate>
			</ComboBox.ItemTemplate>
		</ComboBox>
		<TextBlock Text="{Binding PlayerName}"/>
		<CheckBox x:Name="NoShuffleBox">
			No Shuffle
		</CheckBox>
		<TextBlock>
			Your opponent:
		</TextBlock>
		<TextBlock x:Name="OpponentNameBlock"></TextBlock>
		<Button Click="TryStartClick">
			Try to start
		</Button>
	</StackPanel>
</Window>
